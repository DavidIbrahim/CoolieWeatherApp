<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoolieWeather" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green100</item>
        <item name="colorPrimaryVariant">@color/green400</item>
        <item name="colorOnPrimary">@color/gray100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green400</item>
        <item name="colorSecondaryVariant">@color/green400</item>
        <item name="colorOnSecondary">@color/gray100</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CoolieWeather.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CoolieWeather.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="Theme.CoolieWeather.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>